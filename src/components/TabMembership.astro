---
import { getEntry } from 'astro:content';
const cl = Astro.currentLocale;
const label = await getEntry('labels', `${cl}/labels`);
const { user } = Astro.locals;
const joined = new Date(user.registration);
const joined_str = joined.toLocaleDateString('de-CH', {
    day: '2-digit',
    month: '2-digit',
    year: 'numeric'
});

---

<div class="h-full group p-6 sm:p-8 bg-white border border-gray-200/50 dark:shadow-none dark:border-gray-700 dark:bg-gray-800 bg-opacity-90 shadow-2xl shadow-gray-600/10">
    <table class="mt-6 -mb-2 w-full text-gray-600 dark:text-gray-300">
        <tbody>
            <tr>
                <td></td>
                <td class="text-right">
                    <form method="POST" id="deleteForm" >
                        <input type="hidden" name="form" value="delete">
                        <button id="delete_button" type="submit" class="bg-red-500 hover:bg-[#2077C2] text-white font-bold py-2 px-4">{labelEntry.data.delete_account}</button>
                    </td>
                    </form>        
            </tr>
            <tr>
                <td class="py-2">Name (ID)</td>
                <td class="text-gray-500">{user.name} ({user.$id})</td>
            </tr>
            <tr>
                <td class="py-2">{labelEntry.data.profile_joined}</td>
                <td class="text-gray-500">{joined_str}</td>
            </tr>
        </tbody>
    </table>
</div>